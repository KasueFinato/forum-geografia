<h3> Usuarios </h3>


<%= link_to "Cadastrar", new_usuario_path %>

<table>
  <thead>
    <tr>
      <th>Nome completo</th>
      <th>Nome de usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.login %></td>
         <td><%= link_to 'Mostra', usuario %></td>
         <td><%= link_to 'Alterar', usuario, method: :update %></td>
        <td><%= link_to 'Exclui', usuario, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>